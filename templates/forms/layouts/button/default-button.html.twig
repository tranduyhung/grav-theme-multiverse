{% set button_tag %}
<li>
<input 
    {% block embed_button_core %}{% endblock %}
    {% block embed_button_classes %}{% endblock %}
    value='{%- block embed_button_content -%}{%- endblock -%}'>
{% endset %}

{% if button_url %}
  <a href="{{ button_url|e }}">{{ button_tag|trim|raw }}</a>
{% else %}
  {{ button_tag|trim|raw }}
{% endif %}
